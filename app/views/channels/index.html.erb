<h1>Listing channels</h1>

<div  class="container">
<table class="table table-striped table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Date</th>
      <th>Region</th>
      <th>Region cd</th>
      <th>Iepg_length</th>
      <th colspan="3">Operation</th>
    </tr>
  </thead>

  <tbody>
    <% @channels.each do |channel| %>
      <tr>
        <td><%= channel.date %></td>
        <td><%= channel.region %></td>
        <td><%= channel.region_cd %></td>
        <td><%= link_to channel.iepgs.length, channel %></td>
        <td><%= link_to 'Show', channel %></td>
        <td><%= link_to 'Edit', edit_channel_path(channel) %></td>
        <td><%= link_to 'Destroy', channel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New Channel', new_channel_path %>
